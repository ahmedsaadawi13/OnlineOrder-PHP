# ================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ================================================
# IMPORTANT: Copy this to .env and configure for production
# Never commit .env file to version control!
# ================================================

# Application
APP_NAME="Restaurant Online Ordering SaaS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_TIMEZONE=UTC
APP_LOCALE=en

# JWT Authentication
# CRITICAL: Generate a strong random secret with: php -r "echo bin2hex(random_bytes(32)) . PHP_EOL;"
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_64_CHAR_RANDOM_STRING
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=restaurant_saas
DB_USERNAME=restaurant_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# Redis Configuration (Optional but recommended)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Email Configuration (SendGrid recommended)
MAIL_DRIVER=sendgrid
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMS Configuration (Twilio)
SMS_DRIVER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Payment Gateways
# Stripe
STRIPE_PUBLIC_KEY=pk_live_your_live_key_here
STRIPE_SECRET_KEY=sk_live_your_live_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your-paypal-live-client-id
PAYPAL_SECRET=your-paypal-live-secret
PAYPAL_MODE=live

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Storage
STORAGE_DRIVER=local
# For S3 storage (optional):
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=restaurant-saas-production

# Logging
LOG_LEVEL=error
LOG_CHANNEL=daily
LOG_MAX_FILES=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=60
RATE_LIMIT_WINDOW=60

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
SESSION_LIFETIME=120
SESSION_DRIVER=file

# Queue Configuration
QUEUE_DRIVER=sync
QUEUE_CONNECTION=default

# Firebase (Push Notifications - Optional)
FIREBASE_SERVER_KEY=
FIREBASE_SENDER_ID=

# Security
# Enable these in production for additional security
FORCE_HTTPS=true
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Monitoring & Analytics (Optional)
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# ================================================
# PRODUCTION CHECKLIST:
# ================================================
# [ ] Change JWT_SECRET to random 64-char string
# [ ] Set APP_DEBUG=false
# [ ] Configure database with strong password
# [ ] Set up SSL certificate (HTTPS)
# [ ] Configure email service (SendGrid)
# [ ] Configure SMS service (Twilio)
# [ ] Set up payment gateways (Stripe/PayPal LIVE keys)
# [ ] Configure proper CORS origins
# [ ] Enable rate limiting
# [ ] Set up automated backups
# [ ] Configure error monitoring (Sentry)
# [ ] Test all critical endpoints
# [ ] Review security headers
# ================================================
